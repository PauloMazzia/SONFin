        <nav class="navbar is-fullwidth">
            <div class="navbar-start has-text-centered">
                &nbsp;&nbsp;Versao 1.0 - Plano B Softwares
            </div>
            <form method="post" action="{{ route('auth.login') }}">
                <div class="navbar-end">
                    <div class="field is-horizontal">
